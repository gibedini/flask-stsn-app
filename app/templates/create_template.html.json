{% extends 'base.html' %}
{% block title %}Nuovo template{% endblock %}
{% block content %}
<h2>Nuovo template</h2>
<form method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Nome interno</label>
    <input class="form-control" name="name" id="name" required>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Descrizione</label>
    <input class="form-control" name="description" id="description">
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">Contenuto</label>
    <textarea class="form-control" name="content" id="content" rows="10" required></textarea>
  </div>
  <button class="btn btn-primary">Crea template</button>
</form>
{% endblock %}